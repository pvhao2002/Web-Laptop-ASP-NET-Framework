@model WebBanLaptop.ViewModel.ProfileViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-3">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-2 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://www.shutterstock.com/image-vector/default-avatar-profile-icon-social-600nw-1677509740.jpg"
                                 alt="Img" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>
                                    @(((WebBanLaptop.Models.user)Session["user"]).full_name)
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                     viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                     stroke-linecap="round" stroke-linejoin="round"
                                     class="feather feather-instagram mr-2 icon-inline text-danger">
                                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                                </svg>Instagram
                            </h6>
                            <span class="text-secondary">
                                @(((WebBanLaptop.Models.user)Session["user"]).full_name)
                            </span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                     viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                     stroke-linecap="round" stroke-linejoin="round"
                                     class="feather feather-facebook mr-2 icon-inline text-primary">
                                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                                </svg>Facebook
                            </h6>
                            <span class="text-secondary">
                                @(((WebBanLaptop.Models.user)Session["user"]).full_name)
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10">
                <div class="row gutters-sm">
                    <div class="col-sm-12 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3">
                                    <i class="material-icons text-info mr-2">
                                        Lịch
                                        sử đơn hàng
                                    </i>
                                </h6>
                                <table class="table table-bordered ">
                                    <thead>
                                        <tr>
                                            <th scope="col"> Mã đơn hàng </th>
                                            <th> Người nhận</th>
                                            <th> Số điện thoại </th>
                                            <th> Địa chỉ giao hàng </th>
                                            <th> Ngày mua </th>
                                            <th> Tổng tiền </th>
                                            <th> Trạng thái </th>
                                            <th> Số lượng sản phẩm </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.myOrder)
                                        {
                                            <tr>
                                                <td scope='row'> SMB - @item.order_id</td>
                                                <td>@item.full_name</td>
                                                <td>@item.phone_number</td>
                                                <td>@item.shipping_address</td>
                                                <td>@item.created_at</td>
                                                <td>@($"{item.total_price:n0} VND")</td>
                                                @switch (item.status)
                                                {
                                                    case "in_progress":
                                                        <td>Đã xác nhận đơn hàng. Đơn hàng đang được đóng gói</td>
                                                        break;
                                                    case "in_shipping":
                                                        <td>Đơn hàng đang giao đến bạn</td>
                                                        break;
                                                    case "done":
                                                        <td>Đã giao hàng</td>
                                                        break;
                                                    case "cancel":
                                                        <td>Đã bị hủy bởi người bán</td>
                                                        break;
                                                    default:
                                                        <td>Đang chờ xác nhận</td>
                                                        break;
                                                }
                                                <td>@item.total_quantity</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

